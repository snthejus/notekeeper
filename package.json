{
  "name": "notekeeper",
  "version": "1.0.0",
  "repository": "https://github.com/snthejus/notekeeper",
  "author": "snthejus",
  "license": "MIT",
  "main": "./src/app/main/app-window.js",
  "scripts": {
    "start": "./node_modules/.bin/electron . --allow-file-access-from-files",
    "pack": "build --dir",
    "dist": "build"
  },
  "dependencies": {
    "username": "3.0.0",
    "bootstrap": "3.3.7",
    "quill": "1.3.2",
    "bootstrap-tagsinput": "0.7.1",
    "jquery": "3.2.1",
    "bootstrap-treeview": "1.2.0",
    "log4js": "2.5.3"
  },
  "devDependencies": {
    "electron": "2.0.4",
    "electron-builder": "20.0.6"
  },
  "build": {
    "appId": "org.notekeeper",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  }
}
